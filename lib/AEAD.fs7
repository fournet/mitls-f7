function val AEADSize: ki:epoch -> nat
private definition !ki,si. si = EpochSI(ki) =>
	( IsOnlyMACCiphersuite(si.cipher_suite) =>
	  AEADSize(ki) = MacSize(TLSConstants.CipherSuiteMACAlg(si.cipher_suite,si.protocol_version)) ) /\
	( IsAEADCiphersuite(si.cipher_suite) =>
	  AEADSize(ki) = MacSize(TLSConstants.CipherSuiteMACAlg(si.cipher_suite,si.protocol_version)) +
					    EncKeySize(TLSConstants.CipherSuiteENCAlg(si.cipher_suite,si.protocol_version)) +
					    Range.IVSize(ki) )

