private assume !e,si. si = EpochSI(e) =>
	( si.protocol_version = SSL_3p0 \/ si.protocol_version = TLS_1p0
		=> IVSize(e) = 0 ) /\
	( si.protocol_version = TLS_1p1 \/ si.protocol_version = TLS_1p2
		=> IVSize(e) = BlockSize(CipherSuiteENCAlg(si.cipher_suite,si.protocol_version)) )
private assume !e,si,tlen. si = EpochSI(e) =>
	( IsOnlyMACCiphersuite(si.cipher_suite) => Encode.PlainLength(e,tlen) = tlen ) /\
    ( IsAEADCiphersuite(si.cipher_suite) /\ tlen >= IVSize(e) =>
	  Encode.PlainLength(e,tlen) = tlen - IVSize(e) )

// We have two variants for encryption and decryption: 
// the first (primed) is concrete; the second is idealized at safe indexes.

predicate ENCrypted of e:epoch * ad:(;e)AEADPlain.adata * rg:range *  (;rg)rbytes * cipher

// private definition !e,ad,rg,p,c.
// 	ENCrypted(e,ad,rg,p,c) <=>
// 		?k,p'. ENC.ENCrypted(e,Length(c),k,)

val encrypt': ki:succEpoch -> (;ki) AEADKey -> ad:(;ki)AEADPlain.adata ->
  rg:range -> p:(;ki,ad,rg) AEADPlain.plain ->
  ((;ki) AEADKey * c:cipher){Length(c) = TargetLength(ki,rg)}

val encrypt : ki:succEpoch -> (;ki) AEADKey -> ad:(;ki)AEADPlain.adata ->
  rg:range -> p:(;ki,ad,rg) AEADPlain.plain ->
  ((;ki) AEADKey * c:cipher){Length(c) = TargetLength(ki,rg)
							 /\ ENCrypted(ki,ad,RangeClass(ki,rg),AEADPlain.Payload(ki,ad,RangeClass(ki,rg),p),c)}

//CF unclear whether the log should include the plaintext; tried without, should rollback...
type entry = ki:succEpoch * ad:(;ki) AEADPlain.adata * rg:range * p:(;ki,ad,rg) AEADPlain.plain * c:ENC.cipher { ENCrypted(ki,ad,rg,AEADPlain.Payload(ki,ad,rg,p),c) /\ rg = CipherRangeClass(ki,Length(c)) }
private val log: entry list ref
private val cmem: ki:succEpoch -> ad:(;ki)AEADPlain.adata -> c:cipher ->  
  entry list -> res:(r:range * (;ki,ad,r)AEADPlain.plain) option { 
    ( !rg,p. res = Some ((rg,p)) => ENCrypted(ki,ad,rg,AEADPlain.Payload(ki,ad,rg,p),c) ) /\
	( res = None => !rg,p. not ENCrypted(ki,ad,rg,AEADPlain.Payload(ki,ad,rg,p),c) )}

private val safe: ki:succEpoch -> b:bool { b = true <=> Auth(ki) }

//CF a corollary of affine encryptions:
theorem !ki,d,rg0,p0,rg1,p1,c. (ENCrypted(ki,d,rg0,p0,c) /\ ENCrypted(ki,d,rg1,p1,c)) => p0 = p1

//KB should be provable, but is invalid right now?
assume !e. IsOnlyMACCiphersuite(EpochSI(e).cipher_suite) => not TLSInfo.Auth(e)

val decrypt': ki:succEpoch -> k:(;ki) AEADKey -> ad:(;ki)AEADPlain.adata ->
  c:cipher -> res: 
  ( ( 
    (;ki) AEADKey *  
    rg:range * 
	p:(;ki,ad,rg) AEADPlain.plain) { rg = CipherRangeClass(ki,Length(c))
									 // /\ !p',rg'. ENCrypted(ki,ad,rg',p',c) => p=p'
									 } ) Result

// { (* partial functional correctness when decrypting what we encrypted *)
//   !pl,p,tag,rg.
//	(    Length(c) = EncryptedLength(ki,rg)
//	  /\ MACed(e,ad,pl,tag) // nb Encode.MACed has extra args.
//     /\ Encoded(e,ad,pl,tag,p) 
//     /\ ENCrypted(e,Length(c),StateID(e,Encryptor(k)),p,c)  
//   => ?k',r'. res = Correct((k',r',pl)) } 

val decrypt: ki:succEpoch -> (;ki) AEADKey -> ad:(;ki)AEADPlain.adata ->
  c:cipher -> res: 
  ( ((;ki) AEADKey *  rg:range * (;ki,ad,rg) AEADPlain.plain)
     {rg = CipherRangeClass(ki,Length(c))}
  ) Result
   {
    (Safe(ki) => 
        (   (!k,r,p. res = Correct((k,r,p)) => ENCrypted(ki,ad,r,AEADPlain.Payload(ki,ad,r,p),c)) 
		 /\ (!r,p. ENCrypted(ki,ad,r,AEADPlain.Payload(ki,ad,r,p),c) => (?k,r'. res = Correct((k,r',p))))
		))}
// The last two lines are equivalent to (but easier to verify than)
// !p. CTXT(ki,ad,p,c) <=> (?k,r. res = Correct((k,r,p)))

