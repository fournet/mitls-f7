module AEPlain

open Bytes
open TLSInfo
open CipherSuites
open DataStream
open Fragment
open Algorithms
open CipherSuites


function val ADLength: KeyInfo * KeyInfo -> nat
function val IVSize: KeyInfo * KeyInfo -> nat
assume !ki. (ki.sinfo.protocol_version = SSL_3p0 /\ ADLength(ki,ki) = 9) \/
	(ki.sinfo.protocol_version <> SSL_3p0 /\ ADLength(ki,ki) = 11)

type (;ki:KeyInfo) data = (b:bytes){Length(b) = ADLength(ki,ki)}
predicate AESays of ki:KeyInfo * r:range * ad:(;ki) data * (;ki,r)fragment 

predicate type preds = Unsafe of KeyInfo
private assume !ki. Unsafe(ki) <=> not Safe(ki)

private type (;ki:KeyInfo,r:range,ad:(;ki)data)AEPlain = {contents: (x:(;ki,r)fragment{Auth(ki) => AESays(ki,r,ad,x)})}

val AEPlain: ki:KeyInfo{not Safe(ki)} -> r:range -> ad:(;ki)data -> (;r)rbytes -> (;ki,r,ad)AEPlain
val AERepr:  ki:KeyInfo{not Safe(ki)} -> r:range -> ad:(;ki)data -> (;ki,r,ad)AEPlain -> (;r)rbytes

val AEConstruct: ki:KeyInfo -> r:range -> ad:(;ki)data -> f:(;ki,r)fragment{Auth(ki) => AESays(ki,r,ad,f)} -> (;ki,r,ad)AEPlain
val AEContents:  ki:KeyInfo -> r:range -> ad:(;ki)data -> (;ki,r,ad)AEPlain -> f:(;ki,r)fragment{Auth(ki) => AESays(ki,r,ad,f)}


// Plaintext of MAC (addData + TLSFragment.fragment)
private type (;ki:KeyInfo) MACPlain = {macP:bytes}
private type (;ki:KeyInfo) tag = {macT:bytes}
function val MACPlain : 'a * 'b * 'c * 'd -> 'e

val macPlain: ki:KeyInfo -> r:range -> 
  ad:(;ki)data ->
  f:(;ki,r,ad)AEPlain ->
  p:(;ki)MACPlain{p = MACPlain(ki,r,ad,f)}


val mac: ki:KeyInfo -> (;ki) MAC.key -> t:(;ki) MACPlain{?r,ad,f. t = MACPlain(ki,r,ad,f) /\ (Auth(ki) => AESays(ki,r,ad,f.contents))}
  -> tag:(;ki) tag{Length(tag.macT) = MacKeySize(CipherSuiteMACAlg(ki.sinfo.cipher_suite))}
val verify: ki:KeyInfo -> (;ki) MAC.key -> text:(;ki) MACPlain -> tag:(;ki) tag ->
  v:bool{v = true => (?r,ad,f. text = MACPlain(ki,r,ad,f) /\ (Auth(ki) => AESays(ki,r,ad,f.contents)))}


val padLength: ki:KeyInfo -> nat -> nat
function val RangeCipher: KeyInfo * range -> nat // not injective
val rangeCipher: ki:KeyInfo -> r:range -> tlen:nat{tlen = RangeCipher(ki,r) /\ tlen <= DataStream.max_TLSCipher_fragment_length}
val cipherRange: ki:KeyInfo -> tlen:nat{tlen <= DataStream.max_TLSCipher_fragment_length} -> r:range{tlen = RangeCipher(ki,r)}


// AP and CF agree: AEPlain is indexed by (ki and) its public length, after encoding (and not by range).
// We define function from:
// - public length of ciphertext to public length of encoded plaintext (either identity, or minus iv length)
// - from tlen to public range of decoded authenticated fragment
// - (and the inverse functions)

function val PlainLength: ki:KeyInfo * tlen:nat -> plen:nat
assume !ki. IVSize(ki,ki) >= 0
assume !ki.
	( ki.sinfo.protocol_version = SSL_3p0 \/ ki.sinfo.protocol_version = TLS_1p0
		=> IVSize(ki,ki) = 0 ) /\
	( ki.sinfo.protocol_version = TLS_1p1 \/ ki.sinfo.protocol_version = TLS_1p2
		=> IVSize(ki,ki) = BlockSize(CipherSuiteENCAlg(ki.sinfo.cipher_suite)) )
assume !ki,tlen.
	( IsOnlyMACCiphersuite(ki.sinfo.cipher_suite) => PlainLength(ki,tlen) = tlen ) /\
    ( IsAEADCiphersuite(ki.sinfo.cipher_suite) /\ tlen >= IVSize(ki,ki) =>
	  PlainLength(ki,tlen) = tlen - IVSize(ki,ki) )

private type (;ki:KeyInfo,tlen:nat) plain = {p: (x:bytes){Length(x) = PlainLength(ki,tlen) /\ tlen <= DataStream.max_TLSCipher_fragment_length}}
val plain: ki:KeyInfo{not Safe(ki)} -> tlen:nat{tlen <= DataStream.max_TLSCipher_fragment_length} -> b:bytes{Length(b) = PlainLength(ki,tlen)} -> (;ki,tlen) plain
val repr:  ki:KeyInfo{not Safe(ki)} -> tlen:nat -> (;ki,tlen) plain -> b:bytes{Length(b) = PlainLength(ki,tlen)}


function val MsgBytes: ki:KeyInfo * (;ki) data * bytes -> bytes
assume !ki,ad,x. MsgBytes(ki,ad,x) = (ad @| IntBytes(2,Length(x))) @| x 
assume !ki,ad1,x1,ad2,x2. (Length(ad1) = Length(ad2) /\
                        MsgBytes(ki,ad1,x1) = MsgBytes(ki,ad2,x2)) => 
                       (ad1 = ad2 /\ x1=x2)

// Now defined in MAC
// predicate Msg of ki:KeyInfo * tlen:DataStream.range * (;ki,tlen)MACPlain.MACPlain

assume !ki,tlen,pl. MAC.Msg(ki,pl) <=>
  (Corrupt(ki) \/
     (?ad,x. Length(ad) = ADLength(ki,ki) /\
	  pl = MsgBytes(ki,ad,x)// /\ ??
	// TLSFragment.Fragment(ki,tlen,
	// 	       TLSFragment.ADseqn(ki.sinfo.protocol_version,ad),
	// 	       TLSFragment.ADct(ki.sinfo.protocol_version,ad),x)))
	))

ask !ki,t. Corrupt(ki) => MAC.Msg(ki,t)

val pad: l:int -> b:bytes{Length(b) = l}

val check_split: 
  b:bytes -> i:int -> 
  b1:bytes * b2:bytes { Length(b1) = i /\ b = b1 @| b2 }

// TODO: Say that the result of encode is "block-aligned" (more generally: compatible with the current enc algorithm)
val ivLength: ki:KeyInfo -> l:nat{l=IVSize(ki,ki)}
val encode: ki:KeyInfo{IsAEADCiphersuite(ki.sinfo.cipher_suite)} ->
	rg:range -> ad:(;ki) data -> (;ki,rg,ad) AEPlain -> (;ki) tag ->
	(tlen:nat * (;ki,tlen) plain){tlen=RangeCipher(ki,rg) /\ tlen <= DataStream.max_TLSCipher_fragment_length}
val decode: ki:KeyInfo{IsAEADCiphersuite(ki.sinfo.cipher_suite)} ->
	ad:(;ki) data -> tlen:nat -> (;ki,tlen) plain ->
	(rg:range * (;ki,rg,ad)AEPlain * (;ki)tag * bool){tlen=RangeCipher(ki,rg)}

val encodeNoPad: ki:KeyInfo{IsOnlyMACCiphersuite(ki.sinfo.cipher_suite)} ->
	rg:range -> ad:(;ki) data -> (;ki,rg,ad) AEPlain -> (;ki) tag ->
	(tlen:nat * (;ki,tlen) plain){tlen=RangeCipher(ki,rg) /\ tlen <= DataStream.max_TLSCipher_fragment_length}
val decodeNoPad: ki:KeyInfo{IsOnlyMACCiphersuite(ki.sinfo.cipher_suite)} ->
	ad:(;ki) data -> tlen:nat -> (;ki,tlen) plain ->
	(rg:range * (;ki,rg,ad)AEPlain * (;ki)tag){tlen=RangeCipher(ki,rg)}

